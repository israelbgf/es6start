{
  "name": "es6skeleton",
  "version": "1.0.0",
  "description": "Skeleton for an ES6 application.",
  "scripts": {

    "clean": "rm -rf dist/",
    
    "build": "babel src --out-dir dist --optional runtime",
    "prebuild": "npm run clean",
    
    "autobuild": "babel src --out-dir dist --watch --optional runtime",
    "preautobuild": "npm run clean",
    
    "test": "cd dist/; mocha",
    "pretest": "npm run build",
    
    "autotest": "cd src/; mocha --watch --require babel/polyfill --compilers js:babel/register",
    "preautotest": "npm run build"
    
  },
  "keywords": [
    "es6"
  ],
  "author": "israel.bgf@gmail.com",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel": "^4.6.1",
    "chai": "^1.10.0",
    "mocha": "^2.1.0"
  }
}
